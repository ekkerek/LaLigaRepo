@page "/team/{TeamId:int}"
@using LA_LIGA_REKREATIVO.Client.Shared.Team
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<Pages.Team> Localizer


<Tabs TabBarStyle="background-color: white;" Size="TabSize.Large" @bind-ActiveKey="@activeKey" Animated Centered>
    <TabPane Tab=@Localizer["Overview"] Key="1">
        <TeamOverview TeamId="TeamId"></TeamOverview>
    </TabPane>
    <TabPane Tab=@Localizer["Players"] Key="2">
        <TeamPlayers TeamId="TeamId"></TeamPlayers>
    </TabPane>
    <TabPane Tab=@Localizer["Results"] Key="3">
        <TeamMatcheass TeamId="TeamId"></TeamMatcheass>
    </TabPane>
</Tabs>

@code {
    [Parameter] public int TeamId { get; set; }

    string activeKey { get; set; } = "1";
}
